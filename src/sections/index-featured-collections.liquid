        "label": "Card Title Two"
      },
      {
        "id": "card_image_three",
        "type": "image_picker",
        "label": "Card Image Three"
      },
      {
        "id" : "card_title_three",
        "type": "text",
        "label": "Card Title Three"
      },
      {
        "id": "card_image_four",
        "type": "image_picker",
        "label": "Card Image Four"
      },
      {
        "id" : "card_title_four",
        "type": "text",
        "label": "Card Title Four"
      }
    ]
  }
