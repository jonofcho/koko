  {
    "name" : "Featured Collection Cards",
    "settings" : [
      {
        "id": "card_image_one",
        "type": "image_picker",
        "label": "Card Image One"
      },
      {
        "id" : "card_title_one",
        "type": "text",
        "label": "Card Title One"
      },
      {
        "id": "card_image_two",
        "type": "image_picker",
        "label": "Card Image Two"
      },
      {
        "id" : "card_title_two",
