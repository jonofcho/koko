<div class="page-width">
  <div class="grid">
    <div class="grid__item one-whole">
      <div class="">
        <h2>Shopping Bag ( )</h2>
        <h3>You qualify for free shipping!</h3>
      </div>
    </div>
  </div>
  <div class="grid">
      <div class="grid__item large-up--two-thirds medium-down--one-whole">
        <div class="cart__item-list--container">
          <!-- FOR ITEM IN CART.ITEMS -->
          <div class="cart__item--container">
            <div class="grid">
              <div class="grid__item one-quarter">
                <div class="cart__item-img--container">
                  <img class="width--full placeholder-img" style="height: 209px" src="https://news.nationalgeographic.com/content/dam/news/photos/000/755/75552.ngsversion.1422285553360.adapt.1900.1.jpg" alt="">
                </div>
              </div>
              <div class="grid__item three-quarters">
                <div class="cart__item-details--container">
                  <div class="mbot-24">
                    <p class="pbot-5 text--semibold">Shiseido</p>
                    <p class="text--medium">BIO-PERFORMANCE LIFT DYNAMIC CREAM</p>
                  </div>
                  <div class="cart__item-details--quantity">
                    <div class="flex align-center">
                      <p>50ml</p>
                      <div class="cart__item-quantity-incrementor">
                        <p>1</p>
                        <div class="cart__arrow--container">
                          <img src="{{ 'icon--arrow-down.svg' | asset_url }}" alt="">
                        </div>
                      </div>
                    </div>
                    <p class="text--medium">$125</p>
                  </div>
                </div>
              </div>
            </div>
            <div class="cart__item--remove--container">
              <div class="cart__item--remove">
                <img src="{{ 'icon--close.svg' | asset_url }}" alt="">
              </div>
            </div>
          </div>
          <hr class="cart__item--divider">
        </div>
      </div>
      <div class="grid__item large-up--one-third medium-down--hide">
        <div class="cart__payment--details">
          <div class="cart__payment--options">
            <button class="btn width--full btn--checkout--default text-white" type="button" name="button">CHECKOUT</button>
            <div class="text-center">
              <p class="mtop-16 mbot-27">OR</p>
            </div>
            <button class="btn width--full btn--checkout--paypal" type="button" name="button">CHECKOUT WITH PAYPAL</button>
            <div class="cart__order-summary--container">
              <h3 class="text-medium-grey">Order Summary</h3>
              <div class="flex justify-between align-center mbot-18 text-medium-grey">
                <p>Subtotal</p>
                <p>$250</p>
              </div>
              <div class="flex justify-between align-center mbot-18 text-medium-grey">
                <p>Tax</p>
                <p>TBD</p>
              </div>
              <div class="flex justify-between align-center mbot-18 text-medium-grey">
                <p>Shipping</p>
                <p>FREE</p>
              </div>
              <hr class="cart__payment-details--divider">
              <div class="flex justify-between align-center">
                <p class="text--bold">Total</p>
                <p class="text--bold">$250</p>
              </div>
            </div>
          </div>
          <div class="cart__payment--promo">
            <p class="text--bold text-medium-grey mbot-8">Promo Code</p>
            <div class="payment__promo--input">
              <input type="text" name="" value="">
              <button class="payment__promo--btn " type="button" name="button">Apply</button>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
