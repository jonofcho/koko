      {%- for tag in collection.all_tags -%}
        {%- if skinConcerns contains tag -%}
        {%- else -%}
          {% assign hide = 'hide' %}
        {% endif %}
      {% endfor %}
      <div class="collection__filters">
        <div class="flex align-center space-between">
