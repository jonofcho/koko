            <option value="sensitive-skin">Sensitive Skin</option> -->
          </select>
          <select class="collection__filter--selection js-collection__filter--selection" name="brand">
            <option default value="">Brand</option>
            {%- for vendor in collection.all_vendors -%}
              {{vendor}}
              <option value="{{ vendor | downcase }}">{{ vendor }}</option>
            {%- endfor -%}
          </select>
        </div>
        <div class="">
          <select class="collection__filter--selection margin-none" name="" id="SortBy">
              <option value="best-selling">Best Selling</option>
              <option value="title-ascending">A-Z</option>
              <option value="title-descending">Z-A</option>
              <option value="price-ascending">Price Ascending</option>
              <option value="price-descending">Price Descending</option>
          </select>
        </div>
      </div>
    </div>
    <div class="large-up--hide">
      <div class="grid">
        <div class="grid__item one-whole">
          <div class="">
            <div class="collection__filter--selection--mobile js-collection__filter--selection--mobile" data-activates="collection__filter--slideout--mobile" name="">
              <p>Sort By</p>
              <div class="collection__filter-indicator--container">
                <img class="width--full" src="{{ 'icon--triangle-down.svg' | asset_url }}" alt="">
              </div>
            </div>
          </div>
        </div>
        {% comment %}
        <div class="grid__item one-half">
          <div class="">
            <!-- <div class="collection__filter--selection"  name=""> -->
              <select class="collection__filter--selection--mobile margin-none" name="" id="SortBy">
