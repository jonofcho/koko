          <select class="collection__filter--selection js-collection__filter--selection {{hide}}" name="skin-concern">
            <option default value="">Skin concern</option>
            {%- for tag in collection.all_tags -%}
              {%- if skinConcerns contains tag -%}
                <option value="{{ tag | downcase }}">{{ tag }}</option>
              {%- endif -%}
            {%- endfor -%}
