          <div class="collapsible-body">
            <div class="">
              {%- for tag in collection.all_tags -%}
                {%- if skinConcerns contains tag -%}
                {%- else -%}
                  {% assign hide = 'hide' %}
                {% endif %}
              {% endfor %}
              {%- for tag in collection.all_tags -%}
                {%- if skinConcerns contains tag -%}
                <div class="flex align-center mbot-24 {{hide}}">
